{% assign id = section.id %}
<style>
    #shopify-section-{{ id }} {
     margin-top: {{ section.settings.margin_top }}px;
     margin-bottom: {{ section.settings.margin_bottom }}px;
     padding-top: {{ section.settings.padding_top }}px;
     padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .heading-{{ id }} h2{
      color: var(--Content-Base-main, #1F2937);
      font-family: satoshi medium;
      font-size: 42px;
      font-style: normal;
      font-weight: 500;
      line-height: 46px;
      letter-spacing: -1.26px;
      text-transform: capitalize;
      max-width: 800px;
      margin: 0 0 40px 0;
      @media(max-width: 768px){
        font-size: 32px;
        line-height: 36px;
        margin: 0 0 24px 0;
      }
    }
    .wrapper-{{ id }} {
      display: grid;
      grid-template-columns: repeat(3,1fr);
      grid-template-rows: 1fr 1fr;
      row-gap: 40px;
      column-gap: 40px;
      /* align-items: center; */
      @media(max-width: 768px){
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 24px;
      }
      .block-3{
        grid-row: 1/-1;
        grid-column: 2/3;
      }
      svg{
        width: 48px;
        height: 48px;
      }
      h3{
        color: var(--Content-Base-main, #1F2937);
        /* H4/Desktop */
        font-family: satoshi medium;
        font-size: 24px;
        font-style: normal;
        font-weight: 500;
        line-height: 28px; /* 116.667% */
        margin: 16px 0 0 0;
        @media(max-width: 768px){
          font-size: 20px;
          line-height: 24px;
          margin: 12px 0 0 0;
        }
      }
      .desc{
        color: var(--Content-Base-base, #4B5563);
        font-family: satoshi regular;
        font-size: 16px;
        font-style: normal;
        font-weight: 400;
        line-height: 24px; /* 150% */
        p{
          margin: 8px 0 0 0;
        }
      }
    }
    .wrapper-{{ id }} .block-1,
    .wrapper-{{ id }} .block-2{
      align-self: end;
    }
    .mobile_only{
      display: none;
    }
  @media screen and (max-width: 890px){
     #shopify-section-{{ id }} {
       margin-top: {{ section.settings.margin_top-m }}px;
       margin-bottom: {{ section.settings.margin_bottom-m }}px;
       padding-top: {{ section.settings.padding_top-m }}px;
       padding-bottom: {{ section.settings.padding_bottom-m }}px;
    }
    .mobile_only{
      display: block;
    }
    .desktop_only{
      display: none;
    }
  }
</style>
<section class="{% unless section.settings.full_width %}page-width{% endunless %}">
  <div class="container-{{ id }}">
    <div class="heading-{{ id }}">
      <h2>{{ section.settings.title }}</h2>
    </div>
    <div class="wrapper-{{ id }}">
      {% for block in section.blocks %}
        <div class="block-{{ forloop.index }}">
          {% case block.type %}
            {% when 'icon' %}
              <div class="info">
                {% if block.settings.icon %}{{ block.settings.icon }}{% endif %}
                <h3>{{ block.settings.title }}</h3>
                <div class="desc">{{ block.settings.desc }}</div>
              </div>
            {% when 'image' %}
              {% if block.settings.image -%}
                {{-
                  block.settings.image
                  | image_url: width: block.settings.image.width
                  | image_tag: class: 'cmc-img desktop_only'
                -}}
              {%- endif %}
              {% if block.settings.image_m -%}
                {{-
                  block.settings.image_m
                  | image_url: width: block.settings.image_m.width
                  | image_tag: class: 'cmc-img mobile_only'
                -}}
              {%- endif %}
          {% endcase %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

