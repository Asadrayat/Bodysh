{% assign id = section.id %}
<style>
    .sec-{{ id }} {
     margin-top: {{ section.settings.margin_top }}px;
     margin-bottom: {{ section.settings.margin_bottom }}px;
     padding-top: {{ section.settings.padding_top }}px;
     padding-bottom: {{ section.settings.padding_bottom }}px;
     position: relative;
    background: #EDE7E4;
    }
    .heading-{{ id }}{
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 40px;
      @media(max-width: 768px){
        align-items: self-start;
        margin-bottom: 24px;
        flex-direction: column;
        gap: 16px;
      }
      p{
        color: var(--Content-Base-main, #1F2937);
        font-family: satoshi regular;
        font-size: 24px;
        font-style: normal;
        font-weight: 500;
        line-height: 28px;
        margin: 0;
        /* display: flex; */
        padding: 8px var(--Spacing-Container-lg, 32px) 11px var(--Spacing-Container-lg, 32px);
        /* justify-content: center; */
        align-items: center;
        gap: 8px;
        border-radius: 4px;
        border: 1px solid #DACEC8;
        background: rgba(255, 255, 255, 0.40);
        backdrop-filter: blur(4.5px);
        @media(max-width: 768px){
          font-size: 20px;
          line-height: 24px;
        }
      }
    }
    .sec-{{ id }} h2{
      color: var(--Content-Base-main, #1F2937);

      /* H2/Desktop */
      font-family: satoshi medium;
      font-size: 42px;
      font-style: normal;
      font-weight: 500;
      line-height: 46px; /* 109.524% */
      letter-spacing: -1.26px;
      text-transform: capitalize;
      margin: 0;
      @media(max-width: 768px){
        font-size: 32px;
        line-height: 36px;
        /* margin-bottom: 32px;  */
      }
    }
   @media(max-width: 768px){
   .sec-{{ id }}  .btn-wrapper{
      display: flex;
      align-items: center;
      width: max-content;
      gap: 8px;
      position: absolute;
      top: 0;
      right: 0;
      transform: translate(0, 35px);
       .btn{
          display: flex;
          padding: var(--spacing-xs, 4px);
          align-items: flex-start;
          gap: 8px;
          border-radius: 32px;
          border: 1px solid #000;
          background: #FFF;
           svg{
            width: 16px;
            height: 16px;
          }
       }
      .btn.btn.swiper-button-disabled{
        border-radius: 32px;
        background: #F2F2F2;
        border: 0;
        svg{
          filter: opacity(0.5);
        }
       }
      }
   .sec-{{ id }}  .button-next svg{
      transform: rotate(180deg);
   }
  }
   @media(min-width: 769px){
   .sec-{{ id }} .image-wrapper{
      /* margin: 40px 0 0 0;
      display: grid;
      grid-template-columns: 1fr 1fr 1fr  1fr;
      gap: 10px; */
    }
    .sec-{{ id }} .swiper-button-next,
    .sec-{{ id }} .swiper-button-prev{
        /* display: none; */
      }
     }
    .sec-{{ id }} .image-wrapper img{
      width: 1
    }

    @media screen and (max-width: 890px){
       .sec-{{ id }} {
         margin-top: {{ section.settings.margin_top-m }}px;
         margin-bottom: {{ section.settings.margin_bottom-m }}px;
         padding-top: {{ section.settings.padding_top-m }}px;
         padding-bottom: {{ section.settings.padding_bottom-m }}px;
      }
    }
</style>

<section class="sec-{{ id }}">
  <div class="container page-width">
    <div class="swiper swiper-{{ id }}">
      <div class="heading-{{ id }}">
        <h2>{{ section.settings.title }}</h2>
        <p class="subtitle">{{ section.settings.subtitle }}</p>
      </div>
      <div class="image-wrapper swiper-wrapper">
        {% for block in section.blocks %}
          {% if block.settings.image %}
            {{ block.settings.image | image_url: width: block.settings.image.width | image_tag: class: 'swiper-slide' }}
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", (event) => {
    new Swiper(".sec-{{ id }} .swiper", {
      slidesPerView: 1.2,
      spaceBetween: 10,
      breakpoints: {
        768: {
          slidesPerView: 4.3,
          spaceBetween: 24
        }
      },
    })
  });
</script>

{% schema %}
