<style>
  .section-container--{{ section.id }}{
    margin-top: {{ section.settings.margin_top | append:'px' }};
    margin-bottom: {{ section.settings.margin_bottom | append:'px' }};
    padding-top: {{ section.settings.padding_top | append:'px' }};
    padding-bottom: {{ section.settings.padding_bottom | append:'px' }};
    overflow: hidden;
  }


  @media screen and (max-width: 768px){
    .section-container--{{ section.id }}{
      margin-top: {{ section.settings.margin_top_mobile | append:'px' }};
      margin-bottom: {{ section.settings.margin_bottom_mobile | append:'px'  }};
      padding-top: {{ section.settings.padding_top_mobile | append:'px' }};
      padding-bottom: {{ section.settings.padding_bottom_mobile | append:'px' }};
    }
  }
    .section-container--{{ section.id }}{
          .info-section{
            display: flex;
            align-items: center;
            justify-content: space-evenly;
            padding: 40px;
            gap: 40px;
            @media(max-width: 768px){
                 display: none;
            }
          }
          .info{
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            @media(max-width: 768px){
              gap: 16px;
            }
          }
        .massage{
          margin: 0;
          font-size: 20px;
          color: #000;
          text-align: center;
          text-wrap: nowrap;
        }
        .icon-container{
          border-radius: 80px;
          border: 1px solid #D7C8C1;
          background: #DFD3CE;
          display: flex;
          padding: var(--Spacing-Container-sm, 16px);
          align-items: center;
        }
        .mbl-info{
          /* display: none; */
          box-sizing: border-box;
          overflow: hidden;
          width: 100vw;
           @media(max-width: 768px){
              display: block !important;
          }
       }

      .swiper--blog__wrapper {
        /* display: flex; */
        /* transition-timing-function: linear !important; */
        /* color: white; */
      }

      .swiper--blog__slide {
        /* width: 244px;
        margin-right: 24px;
        flex-grow: 0;
        flex-shrink: 0;
        flex-basis: auto; */
      }

      }
</style>
<section class="section-container--{{ section.id }}">
  <div class="section-wrapper--{{ section.id }}">
    <div class="mbl-info page-width">
      <div class="swiper--blog__rev__container swiper">
        <div class="swiper--blog__wrapper swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper--blog__slide swiper-slide">
              <div class="info">
                <div class="icon-container">
                  {{ block.settings.icon }}
                </div>
                <p class="massage">{{ block.settings.title }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  addEventListener("DOMContentLoaded", (event) => {

      var blogSliderRev = new Swiper('.swiper--blog__rev__container', {
        wrapperClass: 'swiper--blog__wrapper',
        slideClass: 'swiper--blog__slide',
        touchEventsTarget: 'swiper--blog__wrapper',
        slidesPerView: 1.3,
        breakpoints: {
          768: {
            slidesPerView: 3
          }
        },
        direction: 'horizontal',
        spaceBetween: 24,
        freeMode: true,
        freeModeMomentum: false,
        freeModeMomentumBounce: false,
        // loop: true,
        grabCursor: true,
    });
  });
</script>

